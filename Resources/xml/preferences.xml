<?xml version="1.0" encoding="utf-8" ?>
<androidx.preference.PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">


	<androidx.preference.PreferenceCategory
		app:iconSpaceReserved="false"
		android:key="general"
		android:title ="@string/generalCategoryTitle">

		<com.companyname.navigationgraph8net8.ColorThemeListPreference
			app:iconSpaceReserved="false"
			android:key="colorThemeValue"
			android:defaultValue="1"
			android:title ="@string/colorThemeListPreferenceTitle"
			android:dialogTitle ="@string/colorThemeListPreferenceDialogTitle"
			android:summary ="@string/colorThemeListPreferenceSummary"/>

		<com.companyname.navigationgraph8net8.SystemThemeListPreference
			app:iconSpaceReserved="false"
			android:key="systemThemeValue"
			android:defaultValue="1"
			android:title ="@string/systemThemeListPreferenceTitle"
			android:dialogTitle ="@string/systemThemeListPreferenceDialogTitle"
			android:summary ="@string/systemThemeListPreferenceSummary"/>

		<androidx.preference.CheckBoxPreference
			app:iconSpaceReserved="false"
			android:defaultValue="false"
			android:key="darkTheme"
			android:summary="@string/use_dark_theme_summary"
			android:title="@string/use_dark_theme" />

		<androidx.preference.CheckBoxPreference
			app:iconSpaceReserved="false"
			android:defaultValue ="false"
			android:key ="use_dynamic_colors"
			android:title ="@string/use_dynamic_colors"
			android:summary ="@string/use_dynamic_colors_summary"/>

		<androidx.preference.CheckBoxPreference
			app:iconSpaceReserved="false"
			android:defaultValue ="false"
			android:key ="use_transparent_statusbar"
			android:title ="@string/use_transparent_statusbar"
			android:summary ="@string/use_transparent_statusbar_summary"/>
		
		<androidx.preference.CheckBoxPreference
			app:iconSpaceReserved="false"
			android:defaultValue ="false"
			android:key ="use_animations"
			android:title ="@string/use_animations"
			android:summary ="@string/use_animations_summary"/>

		<androidx.preference.CheckBoxPreference
			app:iconSpaceReserved="false"
			android:defaultValue ="false"
			android:key ="devicesWithNotchesAllowFullScreen"
			android:summary ="@string/devicesWithNotchesAllowFullscreenSummary"
			android:title ="@string/devicesWithNotchesAllowFullscreen"/>


		<androidx.preference.CheckBoxPreference
			app:iconSpaceReserved="false"
			android:defaultValue ="false"
			android:key ="useViewPagerAnimations"
			android:title ="@string/animateViewPagerTitle"
			android:summary ="@string/animateViewPagerSummary"/>

		<androidx.preference.CheckBoxPreference
		  app:iconSpaceReserved="false"
		  android:defaultValue="true"
		  android:key="displayPageIndicator"
		  android:summary="@string/displayPageIndicatorValueSummary"
		  android:title="@string/displayPageIndicatorValueTitle" />

		<androidx.preference.CheckBoxPreference
		  app:iconSpaceReserved="false"
		  android:defaultValue="false"
		  android:key="showSubscriptionInfo"
		  android:summary="@string/showSubscriptionMenuItemSummary"
		  android:title="@string/showSubscriptionMenuItemTitle" />

		<androidx.preference.CheckBoxPreference
			app:iconSpaceReserved="false"
			android:defaultValue ="false"
			android:key ="helper_screens"
			android:title ="@string/reset_helper_screens"
			android:summary ="@string/reset_helper_screens_summary"/>
	</androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>
