<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_book_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/book_title_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="@android:style/TextAppearance.Material"
        app:layout_constraintEnd_toStartOf="@+id/book_author_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="0.50"
        tools:text="Say You're Sorry" />

    <TextView
        android:id="@+id/book_author_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="@android:style/TextAppearance.Material"
        app:layout_constraintEnd_toStartOf="@+id/book_publishdate_textview"
        app:layout_constraintStart_toEndOf="@+id/book_title_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="0.34"
        tools:text="Michael Robotham" />

    <TextView
        android:id="@+id/book_publishdate_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center|end"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="@android:style/TextAppearance.Material"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/book_author_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="0.16"
        tools:text="2024" />
</androidx.constraintlayout.widget.ConstraintLayout>
